<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prep2"
    android:orientation="vertical" >

     <TextView
        android:id="@+id/textv_devid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textv_uavid"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="29dp"
        android:text="Device ID : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />
    
    <TextView
        android:id="@+id/textv_devid_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textv_devid"
        android:layout_alignBottom="@+id/textv_devid"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textv_devid"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textv_uavid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_toLeftOf="@+id/textv_devid_string"
        android:text="UAV ID : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />
    
    <TextView
        android:id="@+id/textv_uavid_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textv_uavid"
        android:layout_alignLeft="@+id/textv_devid_string"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textv_uavid"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textv_devid"
        android:layout_alignLeft="@+id/textv_uavid"
        android:layout_marginBottom="139dp"
        android:text="capture your unmanned airal vehicle." />

</RelativeLayout>